<UserControl x:Class="CommonModules.LotteryModule.LotteryReactiveCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommonModules.LotteryModule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0">
            <TextBox Text="{Binding Name, Mode=TwoWay}" Grid.RowSpan="2"/>
            <Button Command="{Binding  SayHelloCommand}" Content="Say Hello" Height="36" Width="337" VerticalAlignment="Top"/>
        </Grid>
        <GroupBox Header="ReactiveUI"  Grid.Row="1" x:Name="reactiveUIContainer">
            <StackPanel>
                <Expander
               IsExpanded="True"
               Header="Simple Command">
                    <StackPanel>
                        <TextBox
                       Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                        <Button
                       Command="{Binding DisplayCommand}"
                       Content="Display" />
                    </StackPanel>
                </Expander>
                <Expander
               IsExpanded="True"
               Header="Async Command">
                    <StackPanel>
                        <Button Command="{Binding StartAsyncCommand}" Content="Start" />
                        <ProgressBar Value="{Binding Progress}" Height="20"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>
