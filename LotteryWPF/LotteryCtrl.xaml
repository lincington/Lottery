<UserControl x:Class="LotteryWPF.LotteryCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LotteryWPF"
             mc:Ignorable="d" 
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="1000" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button  Width="95"   Click="Button_Click">R1</Button>
                <Button  Width="95"   Click="Button_Click">R2</Button>
                <Button  Width="95"   Click="Button_Click">R3</Button>
                <Button  Width="95"   Click="Button_Click">R4</Button>
                <Button  Width="95"   Click="Button_Click">R5</Button>
                <Button  Width="95"   Click="Button_Click">R6</Button>
                <Button  Width="95"   Click="Button_Click">B1</Button>
                <Button  Width="95"   Click="Button_Click">SUM</Button>
                <Button  Width="95"   Click="Button_Click">Min</Button>
                <Button  Width="95"   Click="Button_Click">Max</Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"  >
            <ScrollViewer   VerticalScrollBarVisibility="Visible"   >
                <StackPanel Orientation="Vertical" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ScottPlot:WpfPlot x:Name="WpfPlot1" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot2" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot3" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot4" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot5" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot6" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot8" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot7" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot9" Height="300" ></ScottPlot:WpfPlot>
                    <ScottPlot:WpfPlot x:Name="WpfPlot10" Height="300" ></ScottPlot:WpfPlot>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

</UserControl>
