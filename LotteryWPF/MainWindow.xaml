<Window x:Class="LotteryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LotteryWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="136*"/>
            <RowDefinition Height="299*"/>
        </Grid.RowDefinitions>

        <Label Content="{Binding WindowTitle}" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Height="75" Width="441"/>
        <Button Content="Click Me" Command="{Binding ShowMessageCommand}" Grid.Row="1"/>
    </Grid>
</Window>
